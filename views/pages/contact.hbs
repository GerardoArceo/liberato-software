                                        </a>
                                    </li>
                                </ul>
                            </div>

                        </div>
                    </section>

                    <section>
                        <div class="ts-title mb-5">
                            <h2>Escríbenos</h2>
                        </div>
                        <form id="form-contact" method="post" class="clearfix ts-form ts-form-email" data-php-path="/assets/php/email.php">

                            <!--Row-->
                            <div class="row">

                                <!--Name-->
                                <div class="col-md-6 col-sm-6">
                                    <div class="form-group">
                                        <label for="form-contact-name">Nombre *</label>
                                        <input type="text" class="form-control" id="form-contact-name" name="name" placeholder="Tu nombre" requerido>
                                    </div>
                                </div>

                                <!--Email-->
                                <div class="col-md-6 col-sm-6">
                                    <div class="form-group">
                                        <label for="form-contact-email">Email *</label>
                                        <input type="email" class="form-control" id="form-contact-email" name="email" placeholder="Tu Email" requerido>
                                    </div>
                                </div>

                            </div>
                            <!--end row -->

                            <!--Subject-->
                            <div class="form-group">
                                <label for="form-contact-subject">Asunto *</label>
                                <input type="text" class="form-control" id="form-contact-subject" name="subject" placeholder="Asunto" requerido>
                            </div>

                            <!--Message-->
                            <div class="form-group">
                                <label for="form-contact-message">Mensaje *</label>
                                <textarea class="form-control" id="form-contact-message" rows="5" name="message" placeholder="Tu Mensaje" requerido></textarea>
                            </div>

                            <!--Submit button-->
                            <div class="form-group clearfix">
                                <button type="submit" class="btn btn-primary float-right" id="form-contact-submit">Enviar mensaje</button>
                            </div>

                            <div class="form-contact-status"></div>

                        </form>
                        <!--end form-contact -->
                    </section>

                </section>
            </div>

        </div>
    </div>

